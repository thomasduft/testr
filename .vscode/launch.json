{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "WebApi",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build:WebApi",
      "program": "${workspaceRoot}/samples/WebApi/bin/Debug/net10.0/WebApi.dll",
      "args": [
        "--urls",
        "https://localhost:5001"
      ],
      "cwd": "${workspaceRoot}/samples/WebApi",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceRoot}/Views"
      },
      "console": "integratedTerminal",
    },
    {
      "name": "testR:run",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-testR",
      "program": "${workspaceFolder}/src/testr.Cli/bin/Debug/net10.0/tomware.TestR.dll",
      "args": [
        "run",
        "https://localhost:5001",
        "-i",
        "../../samples/Definitions/localhost",
        "-o",
        "../../samples/Runs/localhost",
        "-v",
        "Password=password",
        "-s",
        "1000"
      ],
      "cwd": "${workspaceFolder}/src/testr.Cli",
      "stopAtEntry": false
    },
    {
      "name": "testR:run-with-testcase",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-testR",
      "program": "${workspaceFolder}/src/testr.Cli/bin/Debug/net10.0/tomware.TestR.dll",
      "args": [
        "run",
        "https://localhost:5001",
        "-tc",
        "TC-Login-001",
        "-i",
        "../../samples/Definitions/localhost",
        "-o",
        "../../samples/Runs/localhost",
        "-v",
        "Password=password",
        "--continue-on-failure"
      ],
      "cwd": "${workspaceFolder}/src/testr.Cli",
      "stopAtEntry": false
    },
    {
      "name": "testR:run-with-linked-testcase",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-testR",
      "program": "${workspaceFolder}/src/testr.Cli/bin/Debug/net10.0/tomware.TestR.dll",
      "args": [
        "run",
        "https://localhost:5001",
        "-tc",
        "TC-Dashboard-100",
        "-i",
        "../../samples/Definitions/localhost",
        "-o",
        "../../samples/Runs/localhost",
        "-v",
        "Password=password",
        "--otlp",
        "http://localhost:9090/api/v1/otlp/v1/metrics"
      ],
      "cwd": "${workspaceFolder}/src/testr.Cli",
      "stopAtEntry": false
    },
    {
      "name": "testR:pick-file",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-testR",
      "program": "${workspaceFolder}/src/testr.Cli/bin/Debug/net10.0/tomware.TestR.dll",
      "args": [
        "run",
        "https://commitquality.com/",
        "-tc",
        "TC-Documents-001",
        "-i",
        "../../samples/Definitions/commitquality",
        "-o",
        "../../samples/Runs/commitquality",
        "--otlp",
        "http://localhost:9090/api/v1/otlp/v1/metrics"
      ],
      "cwd": "${workspaceFolder}/src/testr.Cli",
      "stopAtEntry": false
    },
    {
      "name": "testR:install-playwright",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-testR",
      "program": "${workspaceFolder}/src/testr.Cli/bin/Debug/net10.0/tomware.TestR.dll",
      "args": [
        "playwright",
        "-c",
        "install",
        "-o",
        "chromium"
      ],
      "cwd": "${workspaceFolder}/src/testr.Cli",
      "stopAtEntry": false
    },
    {
      "name": "testR:validate-TC-Login-001",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-testR",
      "program": "${workspaceFolder}/src/testr.Cli/bin/Debug/net10.0/tomware.TestR.dll",
      "args": [
        "validate",
        "TC-Login-001",
        "-i",
        "../../samples/Definitions/localhost"
      ],
      "cwd": "${workspaceFolder}/src/testr.Cli",
      "stopAtEntry": false
    },
  ]
}
